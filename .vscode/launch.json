    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "executable": "./bin/main.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "stutil",
            "device": "STM32F103C6T6",
            "v1": false,
            "showDevDebugOutput": "parsed",
            "liveWatch": {
                "enabled": true,
                "samplesPe,rSecond": 4
